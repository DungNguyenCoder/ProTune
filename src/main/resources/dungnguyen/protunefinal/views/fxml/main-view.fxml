<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dungnguyen.protunefinal.controllers.MainController">
   <left>
      <AnchorPane prefHeight="414.0" prefWidth="224.0" BorderPane.alignment="CENTER">
         <children>
            <VBox layoutX="14.0" layoutY="103.0" prefHeight="300.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button alignment="TOP_LEFT" graphicTextGap="30.0" mnemonicParsing="false" onAction="#handleHomeButton" prefHeight="43.0" prefWidth="200.0" text="Home">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../images/icons/home.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button alignment="TOP_LEFT" graphicTextGap="30.0" mnemonicParsing="false" onAction="#handleSearchButton" prefHeight="40.0" prefWidth="200.0" text="Search">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../images/icons/search.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button alignment="TOP_LEFT" graphicTextGap="30.0" mnemonicParsing="false" onAction="#handleAddSongButton" prefHeight="40.0" prefWidth="200.0" text="Add song">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../images/icons/add.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button alignment="TOP_LEFT" graphicTextGap="30.0" mnemonicParsing="false" onAction="#handleMyLocalButton" prefHeight="40.0" prefWidth="200.0" text="My local">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../images/icons/local.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button alignment="TOP_LEFT" graphicTextGap="30.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" text="Playlists">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../images/icons/playlist.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button alignment="TOP_LEFT" graphicTextGap="30.0" mnemonicParsing="false" onAction="#handleLogoutButton" prefHeight="40.0" prefWidth="200.0" text="Logout">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../images/icons/logout.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </VBox>
            <Label fx:id="username" layoutX="14.0" layoutY="14.0" prefHeight="80.0" prefWidth="200.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #e65100;" />
         </children>
      </AnchorPane>
   </left>
</BorderPane>
