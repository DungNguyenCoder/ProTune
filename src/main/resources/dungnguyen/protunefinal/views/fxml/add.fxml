<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity"
      maxWidth="-Infinity"
      minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="400.0"
      prefWidth="600.0"
      spacing="10.0"
      stylesheets="@add.css"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="dungnguyen.protunefinal.controllers.AddController">
   <children>
      <TextField
              fx:id="songNameField"
              layoutX="75.0"
              layoutY="237.0"
              promptText="Song name" />
      <TextField
              fx:id="artistField"
              layoutX="238.0"
              layoutY="78.0"
              promptText="Artist" />
      <TextField
              fx:id="playlistField"
              layoutX="179.0"
              layoutY="128.0"
              promptText="Playlist" />
      <TextField
              fx:id="thumbnailField"
              layoutX="179.0"
              layoutY="32.0"
              promptText="Thumbnail" />
      <HBox
              prefWidth="300.0">
         <children>
            <TextField
                    fx:id="linkMP3Field"
                    prefHeight="50.0"
                    prefWidth="410.0"
                    promptText="Link MP3" />
            <Button
                    mnemonicParsing="false"
                    onAction="#handleChooseFileButton"
                    prefHeight="51.0"
                    prefWidth="128.0"
                    text="Link MP3" />
         </children>
      </HBox>
      <Button
              alignment="CENTER"
              contentDisplay="TOP"
              layoutX="41.0"
              layoutY="122.0"
              mnemonicParsing="false"
              onAction="#handleAddSongButton"
              prefHeight="51.0"
              prefWidth="602.0"
              text="                                           Add song" />
   </children>
</VBox>
